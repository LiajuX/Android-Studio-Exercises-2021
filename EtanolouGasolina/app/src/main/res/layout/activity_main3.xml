<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFF"
        android:orientation="vertical"
        android:paddingHorizontal="100px">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/ic_baseline_local_gas_station_24"
            tools:ignore="VectorDrawableCompat"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textCombustivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gasolina"
            android:layout_marginBottom="50dp"
            android:textColor="#F8B195"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ã‰ mais vantajoso abastecer com gasolina do que com etanol neste posto"
            android:textSize="24dp"
            android:textColor="#808080"
            android:gravity="center_horizontal"/>


    </LinearLayout>

</FrameLayout>