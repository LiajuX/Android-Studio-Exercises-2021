<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFF"
        android:orientation="vertical"
        android:paddingHorizontal="100px">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campanha contra a COVID-19"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="80dp"
            android:textColor="#77C66E"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia da 1ª dose"
            android:textColor="#808080"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/inputDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:hint="Insira o dia da primeira dose"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mês da 1ª dose"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#808080"/>

        <EditText
            android:id="@+id/inputMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:inputType="number"
            android:hint="Insira o mês da primeira dose" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da vacina"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#808080"/>

        <EditText
            android:id="@+id/inputVacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="text"
            android:hint="Insira o nome da vacina" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gravar"
            android:layout_marginTop="80dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#77C66E"
            android:textSize="22dp"
            android:textColor="#FFF"
            android:onClick="gravaDadosEMostraProximaTela"/>
    </LinearLayout>

</FrameLayout>