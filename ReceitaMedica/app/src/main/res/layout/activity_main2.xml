<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFF"
        android:orientation="vertical"
        android:paddingHorizontal="100px">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="151dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/ic_baseline_medical_services_24"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do paciente"
            android:textColor="#808080"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---------"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:textColor="#9CCFE7"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vacina tomada"
            android:textColor="#808080"
            android:layout_marginTop="40dp"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:textColor="#9CCFE7"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recuperar"
            android:layout_marginTop="50dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#9CCFE7"
            android:textSize="22dp"
            android:textColor="#FFF"
            android:onClick="doRecuperar"
            android:layout_marginBottom="60dp"/>

    </LinearLayout>

</ScrollView>