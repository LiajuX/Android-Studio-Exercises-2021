<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFF"
        android:orientation="vertical"
        android:paddingHorizontal="100px">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginTop="40dp"
            android:textColor="#808080"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/inputID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:hint="Insira o ID do usuário"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#808080"/>

        <EditText
            android:id="@+id/inputNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nome do usuário" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#808080"/>

        <EditText
            android:id="@+id/inputCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="4"
            android:maxLength="11"
            android:inputType="text"
            android:hint="xxx.xxx.xxx-xx" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de nascimento"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#808080"/>

        <EditText
            android:id="@+id/inputDataDeNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="text"
            android:hint="dd/mm/yyyy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:id="@+id/buttonProximo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="proximo"
                android:paddingVertical="10dp"
                android:backgroundTint="#AE93D9"
                android:textSize="18dp"
                android:onClick="showProximo"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/buttonApagar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="apagar"
                android:paddingVertical="10dp"
                android:backgroundTint="#AE93D9"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:onClick="apagar"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:id="@+id/buttonatualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="atualizar"
                android:paddingVertical="10dp"
                android:backgroundTint="#AE93D9"
                android:textSize="18dp"
                android:onClick="atualizar"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/buttonNovo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="novo"
                android:paddingVertical="10dp"
                android:backgroundTint="#AE93D9"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:onClick="novo"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonInserir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="inserir"
            android:paddingVertical="10dp"
            android:backgroundTint="#AE93D9"
            android:textSize="18dp"
            android:onClick="inserir"
            android:textColor="#FFF" />

    </LinearLayout>
</FrameLayout>